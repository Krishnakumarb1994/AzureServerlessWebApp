@model IEnumerable<CRUDUsingMVC.Models.EmpModel>

@*<p>
    @Html.ActionLink("Add New Employee", "AddEmployee")
</p>*@
<h1 style="font-size:xx-large"><span class="badge badge-pill badge-success">Employee List</span></h1>
<table class="table table-hover">
    <tr class="table-active text-info" style="font-size:medium">
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateofBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    @Html.HiddenFor(model => item.Empid)
    <tr class="table-active" style="font-size:small">
       
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateofBirth)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditEmpDetails", new {  id=item.Empid }, new { @class = "text-success" }) |
            @Html.ActionLink("Delete", "DeleteEmp", new { id = item.Empid}, new { @class = "text-danger", onclick ="return confirm('Are you sure with deleting an employee?');" })
        </td>
    </tr>
   
}

</table>

